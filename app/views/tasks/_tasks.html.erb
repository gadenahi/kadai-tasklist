<ul class="media-list">
  <% tasks.each do |task| %>
    <li class="media">
      <div class="media-body">
        <div>
          <p>Task id: <%= link_to task.id, task %><p> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p>Task Content: <%= task.content %></p>
          <p>Task Status: <%= task.status %></p>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
            <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-default' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>